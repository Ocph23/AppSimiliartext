        <div class="row">
                <h2>
                    <a href="/Home"> ApKeDoks</a>
                   
                </h2>
                <p>
                    Simillar Search Text Document
                </p>
                <p>
                    <a class="btn" href="#"></a>
                </p>
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - USTJ</p>
